<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".DetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Name -->
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Building Name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Architect -->
        <TextView
            android:id="@+id/tv_architect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Architect: John Doe"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Location -->
        <TextView
            android:id="@+id/tv_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Location: Sydney, Australia"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_architect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Year Completed -->
        <TextView
            android:id="@+id/tv_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Year Completed: 2005"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Style -->
        <TextView
            android:id="@+id/tv_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Style: Modern"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_year"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Height -->
        <TextView
            android:id="@+id/tv_height"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Height: 300m"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_style"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Description -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Description: This is a sample description about the building..."
            android:textSize="15sp"
            android:textColor="#444444"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
